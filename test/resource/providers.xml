<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.darkblue.rpcimpl.providers.ServiceProvider" id="serviceProvider" init-method="init" destroy-method="close">
        <constructor-arg name="port" value="10001" />
        <property name="registry" ref="zookeeperRegistry"/>
        <property name="exposeBeanMap">
            <map>
                <entry key="com.darkblue.rpcimpl.test.service.DarkblueService" value-ref="darkblueService"/>
            </map>
        </property>
    </bean>

    <bean class="com.darkblue.rpcimpl.registry.ZookeeperRegistry" id="zookeeperRegistry">
        <constructor-arg name="host" value="192.168.239.146:2181" />
    </bean>
</beans>